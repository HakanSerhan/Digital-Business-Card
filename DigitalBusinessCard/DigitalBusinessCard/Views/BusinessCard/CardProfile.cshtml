                </div>
                <div class="modal-body">
                    @Html.Action("QRCreate", "BusinessCard", new { kod = Request.Url.AbsoluteUri })
                </div>
            </div>
        </div>
    </div>
    <div id="NavBar" style="margin-top:2vh;">
      
            <div id="lefNavbar">
