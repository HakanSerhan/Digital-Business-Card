                    <i class="fa-solid fa-qrcode"></i>  Qr kod
                </button>
            </div>
        
       <div id="centerNavbar" >
         
        </div>
        <div id="rightNavbar">
            <a href="@Request.Url.AbsoluteUri" onclick="copyURI(event)" style="color:black;"> <i class="fa-solid fa-share-nodes"></i> Copy Card</a>
        </div>

    </div>

    @foreach (var x in Model)
    {


        <div id="PersonelInfo">
            <div id="photo">
                <div id="profileDiv">
                    @if (x.ProfilePhoto == null)
                    {
                        <img id="pp" class="profile-user-img img-fluid img-circle"
                             src="~/Content/images/prof.png"
                             alt="User profile picture">
                    }
                    else
                    {
                        <img id="pp" class="profile-user-img img-fluid img-circle"
                             src="@x.ProfilePhoto"
                             alt="User profile picture">

                    }
                    <img src="~/Content/images/background.jpg">
                </div>
                <p id="name">@x.Name @x.Surname</p>
                <p>@x.Title / @x.Company</p>
            </div>
        </div>
        if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin") || ViewBag.urn == ViewBag.nagme)
        {

            <div id="button-div" style="text-align:center; margin-bottom:3%;">
                <a href="/BusinessCard/CardEdit/@x.CardID" class="btn btn-outline-secondary" id="editButton">Edit Profile</a>
